{
  "manifest_version": 3,
  "name": "Fairly",
  "version": "0.1.0",
  "description": "Check your text and detect non-inclusive language in your Google products",
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://docs.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*", "https://docs.google.com/*"],
      "js": ["contentScript.js"],
      "css": ["contentStyles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["fairly_logo.png"],
      "matches": ["https://mail.google.com/*", "https://docs.google.com/*"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "fairly_logo.png",
      "24": "fairly_logo.png",
      "32": "fairly_logo.png"
    },
    "default_title": "Fairly"
  }
}
